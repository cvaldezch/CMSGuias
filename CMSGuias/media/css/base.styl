  html
    background-size: 100% 100%

/* ScrollBar */
::-webkit-scrollbar
  width: 12px

::-webkit-scrollbar-track
  -webkit-box-shadow: #000000
  -webkit-border-radius: 10px
  border-radius: 10px

::-webkit-scrollbar-track-piece
  background-color: #000000
  background-color: rgba(2,2,2,.6)

::-webkit-scrollbar-thumb
  -webkit-border-radius: 10px
  border-radius: 10px
  background: #FFF
  background: rgba(240,240,240,.4)
  -webkit-box-shadow: inset 0 0 3px rgba(20,20,20,0.2)

::-webkit-scrollbar-thumb:hover
  background: #FFF
  background: rgba(254,254,254,.8)
  -webkit-box-shadow: inset 0 0 4px rgba(120,120,120,0.5)

::-webkit-scrollbar-thumb:window-inactive
  background: #E6E6E6
  background: rgba(250,250,250,.8)

/* Final ScrollBar */
.ui-widget
  font-size: 12px
  margin-left: auto
  margin-right: auto
  max-width: 42em

.ui-combobox
  position: relative
  display: inline-block
  font-size: 12px

.ui-combobox-toggle
  position: absolute
  top: 0
  bottom: 0
  margin-left: -1px
  padding: 0
  /* adjust styles for IE 6/7*/
  *height: 1.7em
  *top: 0.1em
  font-size: 12px

.ui-combobox-input
  margin: 0
  padding: 0.3em
  font-size: 12px
  width: 26em

colortext(color, percent)
  color darken(color, percent)

.text-red
  colortext(red, 0)
  &:hover
    colortext(red, 20)
.text-green
  colortext(#5cb85c, 0)
  &:hover
    colortext(#5cb85c, 20)
.text-blue
  colortext(#428bca, 0)
  &:hover
    colortext(#428bca, 20)